<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    >

                     <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_ui"
                        android:id="@+id/letf_ui_1"
                        />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/power_left_ui"
                        />
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:layout_width="130px"
                        android:layout_height="19px"
                        android:max = "100"
                        android:secondaryProgress="10"
                        android:progressDrawable="@xml/bar"
                        android:layout_alignTop="@id/letf_ui_1"
                        android:layout_marginTop="25dp"
                        android:layout_alignRight="@id/letf_ui_1"
                        android:layout_marginRight="30dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_ui"
                        android:id="@+id/letf_ui_2"
                        />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/defense_left_ui"
                        />
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:layout_width="130px"
                        android:layout_height="19px"
                        android:max = "100"
                        android:secondaryProgress="70"
                        android:progressDrawable="@xml/bar"
                        android:layout_alignTop="@id/letf_ui_2"
                        android:layout_marginTop="25dp"
                        android:layout_alignRight="@id/letf_ui_2"
                        android:layout_marginRight="30dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_ui"
                        android:id="@+id/letf_ui_3"
                        />
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/attribute_left_ui"
                        />
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/pbook_w"
                        android:layout_alignTop="@id/letf_ui_3"
                        android:layout_marginTop="15dp"
                        android:layout_alignRight="@id/letf_ui_3"
                        android:layout_marginRight="35dp"
                        android:textSize="30dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_ui"
                        android:id="@+id/letf_ui_4"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="spuky"
                        android:layout_alignTop="@id/letf_ui_4"
                        android:layout_marginTop="20dp"
                        android:layout_alignRight="@id/letf_ui_4"
                        android:layout_marginRight="15dp"
                        android:textSize="20dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextClock
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="80dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/time_button"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="공대 532"
                    android:id="@+id/location_text"
                    android:background="@drawable/time_button"
                    />

            </LinearLayout>
            <ImageButton
                android:layout_weight="0.45"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:background="@drawable/start_button"
                android:id="@+id/start_button"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
            <ImageView
                android:id="@+id/mychar"
                android:layout_weight="0.7"
                android:layout_width="190dp"
                android:layout_height="0dp"
                android:background="@xml/mon1"
                android:layout_gravity="center|bottom"
                />
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                >
                <Button
                    android:layout_weight="1"
                    android:layout_width="110dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_ui"
                    android:text="도    감"
                    android:textSize="22dp"
                    android:id="@+id/bookbutton"
                    />
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <Button
                    android:layout_weight="1.1"
                    android:layout_width="110dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_ui"
                    android:text="캐  릭  터"
                    android:textSize="22dp"
                    />
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="110dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_ui"
                    android:id="@+id/Attribute_view_button"
                    android:text="속    성"
                    android:textSize="22dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/x_button"
        android:id="@+id/x_button"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/right_view"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/attribute"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            >
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/back_button"
                android:id="@+id/right_view_back_button"
                />
            <TextView
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ok_buttom"
                android:id="@+id/right_view_ok_button"
                android:text="확  인"
                android:textSize="25dp"
                />

            <TextView
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/next_button"
                android:id="@+id/right_view_next_button"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

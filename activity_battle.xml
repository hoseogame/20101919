<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/battle"
        />
    <ImageButton
        android:id="@+id/run_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/run_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/battle_mywarp"
                        android:layout_width="220dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:background="@xml/warp"
                        android:layout_marginTop="20dp"
                        />

                    <ImageView
                        android:id="@+id/battle_mych"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:scaleX="-1"
                        android:layout_centerHorizontal="true"
                        android:background="@xml/mon1"
                        />
                <ImageView
                    android:id="@+id/mysheild"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@xml/shild"
                    android:layout_alignBottom="@+id/battle_mywarp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_weight="0.45"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/hp_b"/>
                <ProgressBar
                    android:id="@+id/myhppro"
                    android:layout_weight="2.5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:max = "100"
                    android:progress="80"
                    android:background="@drawable/hp"
                    android:progressDrawable="@xml/hp_bar"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout">

                        <ImageView
                            android:id="@+id/enemy"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@xml/mon2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        >
                        <ImageView
                            android:id="@+id/battle_enemywarp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@xml/enemywarp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/enemy_hp_b"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="10dp"
                            />

                        <ProgressBar
                            android:id="@+id/enemyhppro"
                            android:layout_weight="2.5"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:max = "100"
                            android:progress="70"
                            android:layout_gravity="bottom"
                            android:background="@drawable/hp"
                            android:progressDrawable="@xml/hpenemy_bar" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/enemysheild"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@xml/shild"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/attbutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/battle_attack"/>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/defbutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/battle_defense"/>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/coubutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/battle_counter"/>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/chabutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/battle_charfe"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/attpro"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max = "100"
                        android:progress="60"
                        android:background="@drawable/skill_nfull"
                        android:progressDrawable="@xml/skill_bar"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/defpro"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max = "100"
                        android:progress="60"
                        android:background="@drawable/skill_nfull"
                        android:progressDrawable="@xml/skill_bar"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/coupro"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max = "100"
                        android:progress="60"
                        android:background="@drawable/skill_nfull"
                        android:progressDrawable="@xml/skill_bar"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.08"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>